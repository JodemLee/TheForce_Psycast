<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<CultureDef>
		<defName>Force_Culture_JediOrder</defName>
		<label>Jedi Code</label>
		<description>The Jedi Code was a code of conduct that established rules and modes of behavior for all Jedi.</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">Force_IdeoJediCode</ideoNameMaker>
		<deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">Force_DeityTheForce</deityNameMaker>
		<deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">Force_DeityTypeMakerTheForce</deityTypeMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">Force_LeaderTitleMakerGrandMaster</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalAstropolitan</festivalNameMaker>
		<allowedPlaceTags>
		<li>Force_Jedi_Place</li>
		</allowedPlaceTags>
		<iconPath>UI/Cultures/JediIdeo</iconPath>
		<iconColor>(0.0, 0.0, 0.8)</iconColor>
		<thingStyleCategories>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<category>Rustic</category>
				<priority>1</priority>
			</li>
		</thingStyleCategories>
				<styleItemTags>
			<li>
				<tag>Urban</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoBeard</tag>
				<baseWeight>10</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardRural</tag>
				<baseWeight>0.1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardUrban</tag>
				<baseWeight>0.2</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoTattoo</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
		</styleItemTags>
		<modExtensions>
			<li Class="TheForce_Psycast.DefCultureExtension">
				<ideoIconDef>Force_JediEnclave</ideoIconDef>
			</li>
		</modExtensions>
	</CultureDef>
	
	<IdeoIconDef>
		<defName>Force_JediEnclave</defName>
		<iconPath>UI/Cultures/JediIdeoMain</iconPath>
	</IdeoIconDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_IdeoJediCode</defName>
		<rulePack>
			<rulesStrings>
				<li>r_ideoName->Jedi Code</li>
				<li>r_ideoAdjective->The Code</li>
				<li>r_memberName->Jedi</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_LeaderTitleMakerGrandMaster</defName>
		<rulePack>
			<rulesStrings>
				<li>r_leaderTitle->Grand Master</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_DeityTheForce</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName->The Force</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_DeityTypeMakerTheForce</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType->The Way</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
	<CultureDef>
		<defName>Force_Culture_SithOrder</defName>
		<label>The Sith</label>
		<description>"Anger and pain are natural and part of growth. They give you focus. They make you strong.".</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">Force_IdeoSithCode</ideoNameMaker>
		<deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">Force_DeityTheForce</deityNameMaker>
		<deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">Force_DeityTypeMakerTheForce</deityTypeMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">Force_LeaderTitleMakerDarkLord</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalAstropolitan</festivalNameMaker>
		<allowedPlaceTags>
		<li>Force_Jedi_Place</li>
		</allowedPlaceTags>
		<iconPath>UI/Cultures/SithIdeo</iconPath>
		<iconColor>(0.8, 0.0, 0.0)</iconColor>
		<thingStyleCategories>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<category>Totemic</category>
				<priority>1</priority>
			</li>
		</thingStyleCategories>
				<styleItemTags>
			<li>
				<tag>Urban</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoBeard</tag>
				<baseWeight>10</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardRural</tag>
				<baseWeight>0.1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardUrban</tag>
				<baseWeight>0.2</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoTattoo</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
		</styleItemTags>
		<modExtensions>
			<li Class="TheForce_Psycast.DefCultureExtension">
				<ideoIconDef>Force_SithEnclave</ideoIconDef>
			</li>
		</modExtensions>
	</CultureDef>
	
	<IdeoIconDef>
		<defName>Force_SithEnclave</defName>
		<iconPath>UI/Cultures/SithIdeoMain</iconPath>
	</IdeoIconDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_IdeoSithCode</defName>
		<rulePack>
			<rulesStrings>
				<li>r_ideoName->Sith Cult</li>
				<li>r_ideoAdjective->The Code</li>
				<li>r_memberName->Sith</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>Force_LeaderTitleMakerDarkLord</defName>
		<rulePack>
			<rulesStrings>
				<li>r_leaderTitle->Dark Lord of the Sith</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
	
</Defs>