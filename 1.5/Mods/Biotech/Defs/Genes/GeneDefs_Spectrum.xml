	<GeneDef Name="ForceSensitive" Abstract="True">
		<displayCategory>Psychic</displayCategory>
		<biostatCpx>0</biostatCpx>
		<selectionWeight>0</selectionWeight>
		<exclusionTags>
		  <li>Force</li>
		</exclusionTags>
		<randomChosen>true</randomChosen>
		<modExtensions>
