<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<FactionDef ParentName="FactionBase">
		<defName>Force_Sith_Order</defName>
		<label>Sith Enclave</label>
		<description>The Sith was an ancient religious order of Force-wielders devoted to the dark side of the Force. Driven by their emotions, including hate, anger, and greed, the Sith were deceptive and obsessed with gaining power no matter the cost.</description>
		<pawnSingular>Sith</pawnSingular>
		<pawnsPlural>Sith</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<colorSpectrum>
			<li>(0.5, 0, 0)</li>
			<li>(1, 0, 0)</li>
		</colorSpectrum>
		<settlementGenerationWeight>0.2</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<earliestRaidDays>50</earliestRaidDays>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Darklord of the Sith</leaderTitle>
		<permanentEnemy>false</permanentEnemy>
		<permanentEnemyToEveryoneExceptPlayer>true</permanentEnemyToEveryoneExceptPlayer>
		<fixedName>The Sith</fixedName>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<techLevel>Ultra</techLevel>
		<allowedCultures>
		<li MayRequire="Ludeon.RimWorld.Ideology">Force_Culture_SithOrder</li>
		</allowedCultures>
		<backstoryFilters>
			<li>
				<categories>
					<li>Sith</li>
				</categories>
			</li>
		</backstoryFilters>
		<factionIconPath>World/WorldObjects/Jedi/SithOrder</factionIconPath>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">PainIsVirtue</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HumanPrimacy</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_BloodCourt</li>
		</requiredMemes>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
		</disallowedMemes>
		<xenotypeSet Inherit="False">
			<xenotypeChances>
				
			</xenotypeChances>
			</xenotypeSet>
		
    <caravanTraderKinds>
      <li>Caravan_Force_BulkGoods</li>
      <li>Caravan_Force_CombatSupplier</li>
      <li>Caravan_Force_Exotic</li>
      <li>Caravan_Force_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Force_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Force_Sith</li>
    </baseTraderKinds>
	  <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	<pawnGroupMakers>
      <li>
        <!-- Normal fights, standard mix -->
        <kindDef>Combat</kindDef>
        <options>
			<Force_Sith_Apprentice>6</Force_Sith_Apprentice>
			<Force_Sith_Warrior>4</Force_Sith_Warrior>
			<Force_Sith_Sorcerer>4</Force_Sith_Sorcerer>
			<Force_Sith_Assassin>4</Force_Sith_Assassin>
			<Force_Sith_Lord>1</Force_Sith_Lord>
			<Force_Sith_Darklord>1</Force_Sith_Darklord> 
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
			<Force_Sith_Apprentice>6</Force_Sith_Apprentice>
			<Force_Sith_Warrior>4</Force_Sith_Warrior>
			<Force_Sith_Lord>1</Force_Sith_Lord>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Force_Sith_Trader>1</Force_Sith_Trader> 
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
			<Force_Sith_Apprentice>15</Force_Sith_Apprentice>
			<Force_Sith_Warrior>4</Force_Sith_Warrior>
			<Force_Sith_Lord>2</Force_Sith_Lord>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
			<Force_Sith_Apprentice>18</Force_Sith_Apprentice>
			<Force_Sith_Warrior>4</Force_Sith_Warrior>
			<Force_Sith_Sorcerer>4</Force_Sith_Sorcerer>
			<Force_Sith_Assassin>4</Force_Sith_Assassin>
			<Force_Sith_Lord>2</Force_Sith_Lord>
			<Force_Sith_Darklord>1</Force_Sith_Darklord> 
		</options>
      </li>
	  </pawnGroupMakers>
	</FactionDef>


</Defs>
