	<VFECore.Abilities.AbilityDef ParentName="VPE_PsycastBase">
    <defName>Force_CreateScrollofHatred</defName>
    <label>Create Sith Scroll of Hatred</label>
    <description>Using the caster's darkside connection, offer up a portion of the connection to revitalize an ancient scroll. This will unlock the bolt of hatred scroll.</description>
    <iconPath>Abilities/SithSorcery/SithCrafting</iconPath>
    <abilityClass>TheForce_Psycast.BoltofHatred</abilityClass>
    <requireLineOfSight>false</requireLineOfSight>
    <range>999999</range>
	<distanceToTarget>1.9</distanceToTarget>
    <castTime>1800</castTime>
	<showUndrafted>true</showUndrafted>
    <castSound>VPE_ConjureHeatPearls_Cast</castSound>
	<chance>0</chance>
    <targetMode>Pawn</targetMode>
	 <targetingParameters>
      <canTargetItems>true</canTargetItems>
      <mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>
      <thingCategory>Item</thingCategory>
      <canTargetLocations>false</canTargetLocations>
      <canTargetPawns>false</canTargetPawns>
      <canTargetBuildings>false</canTargetBuildings>
    </targetingParameters>
    <warmupSound>VPE_Psyring_Warmup</warmupSound>
    <modExtensions>
      <li Class="VanillaPsycastsExpanded.AbilityExtension_Psycast">
        <path>VPE_SithSorcery</path>
        <level>1</level>
        <order>3</order>
        <psyfocusCost>0.2</psyfocusCost>
        <entropyGain>0</entropyGain>
      </li>
    </modExtensions>
  </VFECore.Abilities.AbilityDef>
  
